mixin section-gallery()
  section.c-section-gallery#gallery
    .c-section-gallery__wrapper.c-container
      .c-section-gallery__info
        h2.c-section-gallery__title Gallery
        p.c-section-gallery__text Consectetur adipisicing elit, sed do 
          | eiusmod tempor incididunt ut labore et dolore magna aliqua. 
          | Ut enim ad minim veniam, quis nostrud exercitation ullamco 
          | laboris nisi ut aliquip ex ea commodo consequat.
      .c-section-gallery__img 
        +image({
          classList: 'c-section-gallery__img--1',
          src: './assets/images/gallery1.png',
          alt: 'peach'
        })
        +image({
          classList: 'c-section-gallery__img--2',
          src: './assets/images/gallery2.png',
          alt: 'cowberry'
        })
        +image({
          classList: 'c-section-gallery__img--3',
          src: './assets/images/gallery3.png',
          alt: 'mulberry'
        })
        +image({
          classList: 'c-section-gallery__img--4',
          src: './assets/images/gallery4.png',
          alt: 'cowberry with milk'
        })
        +image({
          classList: 'c-section-gallery__img--5',
          src: './assets/images/gallery5.png',
          alt: 'persimmon'
        })
      .c-section-gallery__btn
          +link({
            href: '#home',
            text: 'VIEW MORE',
            linkMode: true
          })