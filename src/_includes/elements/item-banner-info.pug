mixin banner-info(args)
  - let name = args.name || 'Default text';
  - let number = args.number || 'Default text';
  - let svgName = args.svgName || 'heart-plus';

  .e-banner-info 
    .e-banner-info__wrapper 
      .e-banner-info__svg 
        +icon({
          svgLink: svgName,
        })
      .e-banner-info__text 
        p.e-banner-info__name=name
        p.e-banner-info__number=number